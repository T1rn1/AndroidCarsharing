<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAuthorization">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="315dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:text="Войдите в аккаунт"
      android:textSize="35dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.128" />

  <EditText
      android:id="@+id/user_login_auth"
      android:layout_width="215dp"
      android:layout_height="50dp"
      android:layout_marginTop="64dp"
      android:ems="10"
      android:hint="Введите логин"
      android:inputType="text"
      android:textColor="@color/orange"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <EditText
      android:id="@+id/user_pass_auth"
      android:layout_width="215dp"
      android:layout_height="50dp"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:hint="Введите пароль"
      android:inputType="textPassword"
      android:textColor="@color/orange"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/user_login_auth" />

  <Button
      android:id="@+id/btnToMap"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_marginBottom="48dp"
      android:onClick="onClickToMap"
      android:text="Войти"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/btnToReg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btnToReg"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_marginBottom="120dp"
      android:onClick="onClickToReg"
      android:text="Создать аккаунт"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>